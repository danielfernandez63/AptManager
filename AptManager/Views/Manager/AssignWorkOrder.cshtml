@model AptManager.Models.MaintenanceOrder

@{
    ViewBag.Title = "AssignWorkOrder";
}

<h2>Assign Work Order</h2>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.WorkerId)
    @Html.HiddenFor(model => model.OrderId)

    <div class="form-group">
        @Html.Label("Assign Employee", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @*@Html.DropDownList("Name")*@
            @Html.DropDownList("Workers", (SelectList)ViewBag.Workers, "Employee Name", Model.WorkerId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

